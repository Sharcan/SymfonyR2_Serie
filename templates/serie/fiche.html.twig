{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card" style="width: 50%;">
                <div class="card-header">
                    <h3> {{serie.name}} </h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Date de début : {{serie.startedAt | date('d/m/Y')}} <br>
                        Date de fin : {{serie.endedAt | date('d/m/Y')}} <br>
                        Nombre de saison : {{serie.numberSeason}} <br>
                        Categorie : {{serie.categorieId.name}}
                    </p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-danger"> <a href="{{path('removeserie', {id: serie.id})}}" style="color: white;">Supprimer la série</a></button>
                </div>
            </div>
        </div>
        <div class="col-6">
            {# <h3>Modifier la série</h3><br> #}
            {{form_start(serieForm)}}
            {{form_row(serieForm.name)}}
            <label for="categories">Categorie :</label>
            <select name="categories" id="categories">
                {% for categorie in categories %}
                <option value="{{categorie.id}}">{{categorie.name}}</option>
                {% endfor %}
            </select>
            {{form_end(serieForm)}}
        </div>
    </div>
    
</div>

{% endblock %}