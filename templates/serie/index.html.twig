{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6">
                {{form_start(serieForm)}}
                {{form_row(serieForm.name)}}
                <label for="categories">Categorie :</label>
                <select name="categories" id="categories">
