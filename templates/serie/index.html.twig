{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-6">
                {% for serie in series %}
                    <div class="card">
                        <div class="card-header">
                            <h3> {{serie.name}} </h3>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                Date de début : {{serie.startedAt | date('d/m/Y')}} <br>
                                Date de fin : {{serie.endedAt | date('d/m/Y')}} <br>
                                Nombre de saison : {{serie.numberSeason}} <br>
                                Categorie : {{serie.categorieId.name}}
                            </p>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-warning"> <a href="{{path('fiche', {id: serie.id})}}" style="color: white;">Voir sa fiche</a></button>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-6">
                <h3>Ajouter une série</h3>
                {{form_start(serieForm)}}
                {{form_row(serieForm.name)}}
                <label for="categories">Categorie :</label>
                <select name="categories" id="categories">
                    {% for categorie in categories %}
                        <option value="{{categorie.id}}">{{categorie.name}}</option>
                    {% endfor %}
                </select>
                {{form_end(serieForm)}}
            </div>
        </div>
    </div>


{% endblock %}
