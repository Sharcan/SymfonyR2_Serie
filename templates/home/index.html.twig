{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}


{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Page d'accueil</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <h1>Séries</h1>
                <p>Nous avons actuellement ... série dans notre base de données</p>
                <a href="{{path('serie')}}">Voir toutes les séries</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Catégories</h1>
                <p>Nous avons {{categories|length}} catégories</p>
            </div>
            <div class="col-6">
                <p>voici toutes les catégories disponibles :
                    <ul>
                        {% for categorie in categories %}
                            <li> <a href="{{path('categorie', {id: categorie.id})}}">{{categorie.name}}</a>, avec {{categorie.series.count()}} séries dans celle ci</li>
                        {% endfor %}
                    </ul>
                </p>
            </div>


            {{form(categorieForm)}}
        </div>
    </div>
{% endblock %}